{
  "servers": [
    {
      "port": "8080",
      "ssl": false
    },
    {
      "port": "8443",
      "ssl": true
    }
  ],
  "redirects": {
    "localhost": {
      "/google": {
        "url": "https://www.google.com/",
        "status": 301
      }
    }
  },
  "proxies": [
    {
      "listen": 80,
      "pass": 8080,
      "ssl": false,
      "hosts": {
        "localhost": {
          "hostname": "localhost",
          "port": 8080
        },
        "127.0.0.1": {
          "hostname": "localhost",
          "port": 8080
        }
      }
    },
    {
      "listen": 443,
      "pass": 8443,
      "ssl": {
        "key": "key.pem",
        "cert": "cert.pem"
      }
    }
  ],
  "aliases": {
    "127.0.0.1": "localhost"
  },
  "hosts": {
    "localhost": {
      "starts": [
        {
          "route": "/test",
          "method": "GET"
        }
      ],
      "routes": {
        "/test": {
          "GET": {
            "type": "static",
            "dir": "essence-free-opl",
            "index": "index.html"
          }
        },
        "/hello": {
          "GET": {
            "type": "text",
            "response": "Hello, world!"
          },
          "POST": {
            "type": "json",
            "response": {
              "message": "Hello, world!"
            }
          }
        }
      }
    },
    "127.0.0.1": {
      "starts": [
        {
          "route": "/",
          "method": "GET"
        }
      ],
      "routes": {
        "/": {
          "GET": {
            "type": "static",
            "dir": "sadkit.com",
            "index": "index.html"
          }
        },
        "/hello": {
          "GET": {
            "type": "text",
            "response": "Hello, world2!"
          },
          "POST": {
            "type": "json",
            "response": {
              "message": "Hello, world!"
            }
          }
        }
      }
    }
  },
  "general": {
    "standard": {
      "agent": "Sadkit",
      "version": "1.0.0",
      "message": "This host and path has no response configured. This is the default response."
    },
    "workers": 2
  }
}
