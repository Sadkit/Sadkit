{
  "servers": [
    {
      "port": "8080",
      "ssl": false
    },
    {
      "port": "8443",
      "ssl": true
    }
  ],
  "redirects": {
    "localhost": {
      "/google": {
        "url": "https://www.google.com/",
        "status": 301
      }
    }
  },
  "secure": [
    {
      "domain": "127.0.0.1",
      "key": {
        "path": "127.0.0.1.key"
      },
      "cert": {
        "path": "127.0.0.1.cert"
      }
    }
  ],
  "proxies": [
    {
      "listen": 80,
      "pass": 8080,
      "ssl": false,
      "hosts": {
        "localhost": {
          "hostname": "localhost",
          "port": 8080
        },
        "127.0.0.1": {
          "hostname": "localhost",
          "port": 8080
        }
      }
    },
    {
      "listen": 443,
      "pass": 8443,
      "ssl": true,
      "hosts": {
        "localhost": {
          "hostname": "localhost",
          "port": 8443,
          "ssl": true
        },
        "127.0.0.1": {
          "hostname": "127.0.0.1",
          "port": 8080,
          "ssl": false
        }
      }
    }
  ],
  "aliases": {
    "127.0.0.1": "localhost"
  },
  "hosts": {
    "localhost": {
      "starts": [
        {
          "route": "/",
          "method": "GET"
        }
      ],
      "routes": {
        "/": {
          "GET": {
            "type": "static",
            "dir": "localhost",
            "index": "index.html"
          }
        },
        "/hello": {
          "GET": {
            "type": "text",
            "response": "Hello, world!"
          },
          "POST": {
            "type": "json",
            "response": {
              "message": "Hello, world!"
            }
          }
        }
      }
    },
    "127.0.0.1": {
      "starts": [
        {
          "route": "/",
          "method": "GET"
        }
      ],
      "routes": {
        "/": {
          "GET": {
            "type": "static",
            "dir": "sadkit.com",
            "index": "index.html"
          }
        },
        "/hello": {
          "GET": {
            "type": "text",
            "response": "Hello, world2!"
          },
          "POST": {
            "type": "json",
            "response": {
              "message": "Hello, world!"
            }
          }
        }
      }
    }
  },
  "general": {
    "standard": {
      "agent": "Sadkit",
      "version": "1.0.0",
      "message": "This host and path has no response configured. This is the default response."
    },
    "workers": 2
  },
  "dbms" : {
    "active": {
      "nedb": true,
      "mongodb": true
    },
    "nedb": {
      "databases": [
        {
          "name": "main",
          "collections": [
            "users"
          ]
        }
      ]
    }
  }
}
